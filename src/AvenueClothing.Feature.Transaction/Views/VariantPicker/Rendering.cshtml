@model AvenueClothing.Project.Transaction.ViewModels.VariantPickerRenderingViewModel
@{
    Layout = null;
}

@foreach (var variant in Model.Variants)
{
    <div class="margin-top">@variant.DisplayName</div>
    <div class="dropdown">
        <select class="js-variant-picker" data-variant-name="@variant.Name" data-product-sku="@Model.ProductSku" data-variant-exists-url="@Model.VariantExistsUrl" data-get-available-combinations-url="@Model.GetAvailableCombinationsUrl">

            <option class="dropdown-menu" value="">-- Please Select --</option>
            @foreach (var variantItem in variant.VaraintItems)
            {
                <option class="dropdown-item" data-variant-name="@variant.Name" value="@variantItem.Name">@variantItem.DisplayName</option>
            }

        </select>
    </div>
}
