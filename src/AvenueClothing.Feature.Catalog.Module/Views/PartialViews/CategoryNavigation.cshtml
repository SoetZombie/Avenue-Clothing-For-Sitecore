@using System.Web.Mvc.Html
@using AvenueClothing.Feature.Catalog.Module.ViewModels

@model AvenueClothing.Feature.Catalog.Module.ViewModels.CategoryNavigationViewModel
@{
	Layout = null;
}

@helper DisplayCategories(IList<CategoryViewModel> categories)
{
	<ul class="nav nav-pills nav-stacked">
		@foreach (var category in categories)
		{
			<li class="nav-item">
				<a class="nav-link" href="@category.Url">
					<span>@category.Name</span>
				</a>
				@DisplayCategories(category.Categories)
			</li>
		}
	</ul>
}
@if (Model.Categories.Any())
{
	<div class="well sidebar-nav" id="main-nav">
		@DisplayCategories(Model.Categories)
	</div>
}
