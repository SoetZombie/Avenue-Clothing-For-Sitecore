@using System.Web.Mvc
@using System.Web.Mvc.Html


<form id="search-form" class="pull-xs-left form-inline navbar-form" action="/search">
    <div class="input-append input-group">
        <input id="site-search" type="text" name="search" class="form-control" placeholder="Search the store" />
        <span class="input-group-btn">
            <button type="submit" class="btn btn-link btn-search">
                <i class="fa fa-search" aria-hidden="true"></i>
            </button>
        </span>
    </div>
</form>
