@model AvenueClothing.Feature.Catalog.ViewModels.FacetsRenderingViewModel
@{
	Layout = null;
}
@foreach (var facet in @Model.Facets)
{
	<div class="well">
		<legend>@facet.DisplayName</legend>
		@foreach (var value in facet.FacetValues)
		{
			<label>
				<input type="checkbox" class="js-facets" data-facets-name="@facet.Name" data-facets-value="@value.FacetValueName">
				@value.FacetValueName (@value.FacetValueHits)
			</label>
		}
	</div>
}