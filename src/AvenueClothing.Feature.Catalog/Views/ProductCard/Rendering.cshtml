@model AvenueClothing.Feature.Catalog.ViewModels.ProductCardRenderingViewModel
@{
	Layout = null;
}

<div class="product col-sm-4 col-md-4 col-xs-2" id="@Model.ProductSku">
	<div class="product-image">
		@if (!string.IsNullOrEmpty(@Model.ThumbnailImage.ToString()))
		{
			<a href="@Model.Url">@Model.ThumbnailImage</a>
		}
	</div>

    <p class="item-name">
        <a href="@Model.Url">@Model.DisplayName</a>
    </p>

	<p class="item-price">@Model.Amount</p>
	<p class="btn-group view-details">
		<a href="@Model.Url" class="btn btn-default">
			View more <span>
				<i class="fa fa-shopping-cart icon-white" aria-hidden="true"></i>
			</span>
		</a>
	</p>
</div>
