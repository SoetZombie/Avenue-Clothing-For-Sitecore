@model AvenueClothing.Project.Transaction.ViewModels.MiniBasketRenderingViewModel
@{
    Layout = null;
    var emptyClass = Model.IsEmpty ? null : "display:none;";
    var notEmptyClass = !Model.IsEmpty ? null : "display:none;";
}
<div class="js-mini-basket hide-on-small-screen" data-refresh-url="@Model.RefreshUrl" data-mini-basket-empty-selector=".js-mini-basket-empty" data-mini-basket-not-empty-selector=".js-mini-basket-not-empty" data-mini-basket-number-of-items-selector=".js-mini-basket-number-of-items" data-mini-basket-total-selector=".js-mini-basket-total">
    <div style="@emptyClass" class="js-mini-basket-empty @emptyClass">
        <div class="pull-xs-right navbar-collapse">
            <ul class="nav navbar-nav">
                <li>
                    <div>Your basket is empty</div>
                </li>
            </ul>
        </div>
    </div>

    <div style="@notEmptyClass" class="js-mini-basket-not-empty hide-on-small-screen @notEmptyClass">
        <div class="pull-xs-right navbar-collapse">
            <ul class="nav navbar-nav">
                <li>
                    <div>
                        <a href="/cart">
                            <i class="fa fa-shopping-cart margin-right-small" aria-hidden="true"></i><span class="js-mini-basket-number-of-items">@Model.NumberOfItems</span> item(s): <span class="js-mini-basket-total">@Model.Total</span>
                        </a>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="js-mini-basket pull-xs-right hide-on-large-screen" data-refresh-url="@Model.RefreshUrl" data-mini-basket-empty-selector=".js-mini-basket-empty" data-mini-basket-not-empty-selector=".js-mini-basket-not-empty" data-mini-basket-number-of-items-selector=".js-mini-basket-number-of-items" data-mini-basket-total-selector=".js-mini-basket-total">
    <a href="/cart">
        <i class="fa fa-shopping-cart margin-right-small" aria-hidden="true"></i>
        <span class="items-in-minicart js-mini-basket-number-of-items">
            @Model.NumberOfItems
            <!--     <span class="js-mini-basket-number-of-items">@Model.NumberOfItems</span> item(s): <span class="js-mini-basket-total">@Model.Total</span>
             -->
        </span>
    </a>

</div>
